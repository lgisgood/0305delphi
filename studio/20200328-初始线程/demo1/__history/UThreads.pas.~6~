unit UThreads;

interface

uses
  System.SysUtils,System.Classes;

type
  TWork = class(TThread)
  private
    { Private declarations }
  protected
    procedure Execute; override;
  public
    procedure Operation;
  end;

implementation
//局部引用
uses Unit1;
{ TWork }

procedure TWork.Execute;
begin
end;

procedure TWork.Operation;
var
Num:Integer;
begin
      for Num := 1 to 1000 do begin
     Form1.btnbstart.Caption:=Num.ToString;
     //线程休眠100毫秒
     TThread.Sleep(100);
  end;

end;

end.
